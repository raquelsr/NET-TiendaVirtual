@model Practica_TiendaVirtual.Pedido


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cancelar pedido</title>
</head>
<body>
    <div>
        <h1>Número de orden: @Html.DisplayFor(model => model.Id)</h1>
        <hr />
        <h3>¿Está seguro que desea cancelar este pedido?</h3>
        <div class="col-md-6">
            @{
            string[] productos = Model.Productos.Split(';');
            for (int i = 1; i < productos.Length; i++)
            {
                <img src="~/Resources/@(productos[i]).jpg" width="100" />
             }
            }
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Productos:
                <dd>
                    @{
                string[] nombreProductos = Model.NombreProductos.Split(';');
                List<string> list = new List<string>();
                string texto = "";
                for (int i = 1; i < nombreProductos.Length; i++)
                {
                    if (list.Count() == 0)
                    {
                        texto = nombreProductos[i];
                        list.Add(nombreProductos[i]);
                    }
                    else
                    {
                        if (!list.Contains(nombreProductos[i]))
                        {
                            texto = texto + " , " + nombreProductos[i];
                            list.Add(nombreProductos[i]);
                        }
                    }
                }
                    }
                    @texto
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Fecha):
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Fecha)
                </dd>

                <dt>
                    Total productos :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TotalProductos)
                </dd>

                <dt>
                    Precio total :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TotalPrecio) €
                </dd>

                <dt>
            </dl>
        </div>
            @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" id="details">
                <input type="submit" value="Cancelar pedido" class="btn btn-danger" />
                @Html.ActionLink("Volver", "Index", null, null, new { @class = "btn btn-primary" })
            </div>
    }
        </div>
</body>
</html>
